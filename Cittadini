	public static void visualizzaInfoCentroVaccinale() throws IOException {
		
		FileReader file = new FileReader("infoCentri.txt");
		BufferedReader lettore = new BufferedReader(file);
		
		String riga = lettore.readLine();
		
		while(riga != null)
		{
			System.out.println(riga + " ");
			riga=lettore.readLine();
		}
		System.out.println();
		
		FileReader file1 = new FileReader("Eventi_Avversi.txt");
		BufferedReader lettore1 = new BufferedReader(file1);
		
		
		int cont=0;
		int contLine=0;
		
		while(lettore1.readLine() != null)   //Conto quante linee ha il file
		{
			cont++;
			if(cont%2!=0)
			{
				contLine++;
			}
		}
		
		
		
		System.out.println("Il numero di segnalazioni è: " + contLine);
		

		file.close();
		file1.close();
	}
}
