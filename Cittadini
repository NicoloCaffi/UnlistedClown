	public static void registraCittadino() throws FileNotFoundException{
		 
		Scanner input = new Scanner(System.in);
		
		File f = new File("Cittadini.txt");
		
		
	if (f.exists())
	{
		FileOutputStream fos = new FileOutputStream("Cittadini.txt", true);
		
		PrintWriter scrivi = new PrintWriter(fos);
		
		System.out.println("Inserisci un nome");
		String nome1= input.nextLine();
		
		System.out.println("Inserisci un cognome");
		String cognome1= input.nextLine();
		
		System.out.println("Inserisci il codice fiscale");
		String codFiscale1= input.nextLine();
		
		System.out.println("Inserisci una mail");
		String mail1= input.nextLine();

		System.out.println("Inserisci un username");
		String username1= input.nextLine();

		System.out.println("Inserisci una password");
		String password1= input.nextLine();
		
		scrivi.append("\n");
		scrivi.append("Nome: " + nome1);
		scrivi.append("\n");
		scrivi.append("Cognome: " + cognome1);
		scrivi.append("\n");
		scrivi.append("Codice fiscale: " + codFiscale1);
		scrivi.append("\n");
		scrivi.append("Mail: " + mail1);
		scrivi.append("\n");
		scrivi.append("Username: " + username1);
		scrivi.append("\n");
		scrivi.append("Password: " + password1);
		scrivi.append("\n");
		
		scrivi.close();
		
		System.out.println("il file esiste");
	} else
		try {
			if(f.createNewFile())
			{
				PrintWriter scrivi = new PrintWriter(f);
				
				System.out.println("Inserisci un nome");
		        String nome= input.nextLine();
		        
		        System.out.println("Inserisci un cognome");
		        String cognome= input.nextLine();
		        
		        System.out.println("Inserisci il codice fiscale");
		        String codFiscale= input.nextLine();
		        
		        System.out.println("Inserisci una mail");
		        String mail= input.nextLine();

		        System.out.println("Inserisci un username");
		        String username= input.nextLine();

		        System.out.println("Inserisci una password");
		        String password= input.nextLine();
		        
		        
		        scrivi.println("Nome: " + nome);
		        scrivi.println("Cognome: " + cognome);
		        scrivi.println("Codice fiscale: " + codFiscale);
		        scrivi.println("Mail: " + mail);
		        scrivi.println("Username: " + username);
		        scrivi.println("Password: " + password);
		        
		        scrivi.close();
		        
				System.out.println("il file è stato creato");
			}
		} catch (IOException e) {
			System.out.println("il file non esiste");
			e.printStackTrace();
			
		}
	}
	
	
	public static void inserisciEventiAvversi() throws FileNotFoundException {
		
		
		 Scanner input = new Scanner(System.in);
		 
		 File f = new File("Eventi_Avversi.txt");
			
			
			if (f.exists())
			{
				FileOutputStream fos = new FileOutputStream("Eventi_Avversi.txt", true);
				
				PrintWriter scrivi = new PrintWriter(fos);
				
				System.out.println("Inserire 1 per mal di testa,");
				System.out.println("Inserire 2 per febbre,");
